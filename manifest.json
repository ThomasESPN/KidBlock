{
  "manifest_version": 3,
  "name": "KidBlock",
  "version": "1.0",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "URL Blocker",
    "default_icon": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
    }
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "icons": {
      "16": "images/16.png",
      "48": "images/48.png",
      "128": "images/128.png"
  }
}
